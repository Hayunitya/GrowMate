<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green"
        android:padding="16dp">

        <!-- Icon Tumbuh (Kiri) -->
        <ImageView
            android:id="@+id/imgGrowthStage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/icon03" />

        <!-- Detail Tanaman & Tombol (Kanan) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Info Tanaman -->
            <TextView
                android:id="@+id/tvPlantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Tanaman"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/brown"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvPlantDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ditanam: 17 Juli 2025"
                android:textSize="14sp"
                android:textColor="@color/brown"/>

            <TextView
                android:id="@+id/tvWaterStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Perlu disiram"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivWaterStreak"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_siram"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvWaterStreakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/brown" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivFertilizerStreak"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pupuk"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvFertilizerStreakCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/brown" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tombol Siram -->
                <Button
                    android:id="@+id/btnWaterNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siram Sekarang"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/brown"
                    android:textColor="@color/bg"/>

                <!-- Tombol Pupuk -->
                <Button
                    android:id="@+id/btnFertilizerNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pupuk Sekarang"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/brown"
                    android:textColor="@color/bg"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
